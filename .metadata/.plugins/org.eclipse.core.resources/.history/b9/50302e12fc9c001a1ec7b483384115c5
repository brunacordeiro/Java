package entities;

public class Product {
	
	public String name;
	public double price;
	public int quantity;
	
	public double totalValueInStock(){
		return price * quantity;
	}
	
	public void addProducts(int quantitiy){
		//this.quantity - utiliza a palavra this para utilizar o atributo da classe e não o valor do parametro
		
		this.quantity += quantity;
	}
	public void removeProducts(int quantity){
		this.quantity -= quantity;
	}
	
	public String toString(){
		return "Produto: " + name
				+ ", $" + String.format("%.2f", price)
				+ ", " + quantity + " units, "
				+ "Total: $" + String.format("%.2f", totalValueInStock());
	}
}
